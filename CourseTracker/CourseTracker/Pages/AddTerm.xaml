<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="CourseTracker.Pages.AddTerm"
			 Title="Add Term">
    <ContentPage.Content>
        <StackLayout>
            <Label Text="Term Name"
                   FontSize="Title"
				   Margin="10,0,10,0"/>
			<Editor Placeholder="Enter a Term Name" 
					Text="{Binding TermTitle}"
					Margin="10,0,10,0"/>
			<Grid Padding="0,0,0,25">
				<Label Text="Start Date"
					   FontSize="Medium"
					   Grid.Column="0"
					   Grid.Row="0"
					   VerticalTextAlignment="Center"
					   HorizontalTextAlignment="Center"/>
				<DatePicker x:Name="AddStartDate"
							DateSelected="AddStartDate_DateSelected"
							Grid.Column="1"
							Grid.Row="0"
							Margin="0,0,15,0"/>
				<Label Text="End Date"
					   FontSize="Medium"
					   Grid.Column="0"
					   Grid.Row="1"
					   VerticalTextAlignment="Center"
					   HorizontalTextAlignment="Center"/>
				<DatePicker x:Name="AddEndDate" 
							DateSelected="AddEndDate_DateSelected"
							Grid.Column="1"
							Grid.Row="1"
							Margin="0,0,15,0"/>
			</Grid>
			<Button Text="Save"
					Margin="90,0,90,0"
					Padding="20"
					BackgroundColor="#607EAA"
					Clicked="SaveButton_Clicked"/>
		</StackLayout>
    </ContentPage.Content>
</ContentPage>